<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_selector">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dialog_selector">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/twenty"
            android:textColor="@color/white"
            android:text="@string/app_name"
            android:background="@color/blue"
            android:paddingEnd="@dimen/sixteen"
            android:paddingStart="@dimen/sixteen"
            android:paddingTop="@dimen/twenty"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <View
            android:id="@+id/title_divider"
            android:layout_below="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/one"
            android:background="@color/white"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/ten"
            android:layout_below="@+id/title_divider"
            android:background="@color/white">

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/correct_connect_to_vk"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/sixteen"
                android:layout_centerHorizontal="true"
                android:paddingEnd="@dimen/sixteen"
                android:paddingStart="@dimen/sixteen"/>

            <Button
                android:id="@+id/next"
                android:layout_below="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/next"
                android:layout_marginTop="@dimen/three"
                android:layout_centerHorizontal="true"
                android:background="@android:color/transparent"
                android:padding="@dimen/eight"
                tools:ignore="ButtonStyle"/>

        </RelativeLayout>


    </RelativeLayout>

</FrameLayout>